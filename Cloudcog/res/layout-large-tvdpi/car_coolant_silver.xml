<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/car_intakeruby_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/car_fuel_coolant_silver" >

        <ImageView
            android:id="@+id/coolant_needle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="189dp"
            android:layout_marginTop="123dp"
            android:src="@drawable/car_ob2_arrow_small" />

        <TextView
            android:id="@+id/CoolantView"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/coolant_needle"
            android:layout_marginLeft="166dp"
            android:layout_marginTop="123dp"
            android:background="@drawable/background_gauge_counter"
            android:gravity="center"
            android:text="@string/zero"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#2A0A0A"
            android:textSize="42sp" />

        <ImageView
            android:id="@+id/fuel_needle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/coolant_needle"
            android:layout_marginLeft="78dp"
            android:layout_toRightOf="@+id/CoolantView"
            android:src="@drawable/car_ob2_arrow_small" />

        <TextView
            android:id="@+id/FuelView"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/CoolantView"
            android:layout_alignBottom="@+id/CoolantView"
            android:layout_marginLeft="61dp"
            android:layout_toRightOf="@+id/CoolantView"
            android:background="@drawable/background_gauge_counter"
            android:gravity="center"
            android:text="@string/zero"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#2A0A0A"
            android:textSize="42sp" />
    </RelativeLayout>

</RelativeLayout>