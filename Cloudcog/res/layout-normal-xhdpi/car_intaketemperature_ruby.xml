<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/car_fuel_coolant_black" >

        <ImageView
            android:id="@+id/intake_needle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="123dp"
            android:layout_marginTop="70dp"
            android:src="@drawable/car_ob2_arrow_small" />

        <TextView
            android:id="@+id/IntakeView"
            android:layout_width="51dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/FuelView"
            android:layout_alignBottom="@+id/FuelView"
            android:layout_alignRight="@+id/fuel_needle"
            android:layout_marginRight="69dp"
            android:background="@drawable/background_gauge_counter"
            android:gravity="center"
            android:text="@string/zero"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#2A0A0A" />

        <ImageView
            android:id="@+id/fuel_needle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/FuelView"
            android:layout_alignTop="@+id/intake_needle"
            android:layout_marginLeft="15dp"
            android:src="@drawable/car_ob2_arrow_small" />

        <TextView
            android:id="@+id/FuelView"
            android:layout_width="51dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fuel_needle"
            android:layout_marginLeft="52dp"
            android:layout_marginTop="90dp"
            android:layout_toRightOf="@+id/intake_needle"
            android:background="@drawable/background_gauge_counter"
            android:gravity="center"
            android:text="@string/zero"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#2A0A0A" />
    </RelativeLayout>

</RelativeLayout>